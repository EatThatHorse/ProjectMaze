#ifndef C_ROOM
#define C_ROOM
#include <iostream>
using std::cout;

class room {
/// -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
///     KONSTRUKTORY
/// -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
public:
    room(room*,room*,room*,int,int);

/// -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
///     DEKONSTRUKTORY
/// -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
public:
    ~room ();

/// -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
///     METODY
/// -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
public:
    int LVL();
    int WID();
    int NR();
    room* NORTH();
    room* EAST();
    room* SOUTH();
    room* WEST();

    void SET_NORTH(room*);
    void SET_EAST(room*);
    void SET_SOUTH(room*);
    void SET_WEST(room*);

    void DEBUG_SHOWVARS();

/// -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
///    ZMIENNE
/// -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
private:
    int lvl; /// poziom w pionie
    int wid; /// szerokosc
    int nr;  /// nrumer pokoju (room 0,0 - nr 1)

    static int iloscPokoi;

    room* north;    /// wskaznik dla pokoj na polnoc od obecnego pokoju     ▲
    room* east;     /// wskaznik dla pokoj na wschod od obecnego pokoju     ►
    room* south;    /// wskaznik dla pokoj na poludnie od obecnego pokoju   ▼
    room* west;     /// wskaznik dla pokoj na zachod od obecnego pokoju     ◄
};

#endif // C_ROOM



