#ifndef C_ROOM_NAVIGATION
#define C_ROOM_NAVIGATION

#include "c_DesRoom"

#include <iostream>
using std::cout;

class NavRoom : public DesRoom {
/// -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
///     KONSTRUKTORY
/// -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
public:
    NavRoom(NavRoom*,NavRoom*,NavRoom*,int,int);

/// -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
///     DEKONSTRUKTORY
/// -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
public:
    ~NavRoom ();

/// -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
///     METODY
/// -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
public:
    int LVL();
    int WID();
    int NR();
    NavRoom* NORTH();
    NavRoom* EAST();
    NavRoom* SOUTH();
    NavRoom* WEST();

    void SET_NORTH(NavRoom*);
    void SET_EAST(NavRoom*);
    void SET_SOUTH(NavRoom*);
    void SET_WEST(NavRoom*);

    void DEBUG_SHOWVARS();

/// -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
///    ZMIENNE
/// -=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=-=
private:
    int lvl; /// poziom w pionie
    int wid; /// szerokosc
    int nr;  /// nrumer pokoju (room 0,0 - nr 1)

    static int iloscPokoi;

    NavRoom* north;    /// wskaznik dla pokoj na polnoc od obecnego pokoju     ▲
    NavRoom* east;     /// wskaznik dla pokoj na wschod od obecnego pokoju     ►
    NavRoom* south;    /// wskaznik dla pokoj na poludnie od obecnego pokoju   ▼
    NavRoom* west;     /// wskaznik dla pokoj na zachod od obecnego pokoju     ◄
};

#endif // C_ROOM_NAVIGATION



