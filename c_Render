
#ifndef RENDER__PRMAZE
#define RENDER__PRMAZE

    #include "c_Bot"

    #include <iostream>
    using std::cout;

    class Render {
    public:
        Render (){
            for (int col=0; col<30; ++col) {
                cout << "\n\t" << (char)186;
                for (int verse=0; verse<70; ++verse){
                    renderTab[verse][col]= ' ';
                }
            }
        }

        char renderTab [70] [30];

        int Run(player gammer){
            for (int col=0; col<30; ++col){
                cout << "\n\t" << (char)186;
                for (int verse=0; verse<70; ++verse){
                    cout << renderTab[verse][col];
                }
            }
            return 0;
        }

    };



#endif // RENDER__PRMAZE

