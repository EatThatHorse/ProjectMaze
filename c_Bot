
#ifndef BOT__PRMAZE
#define BOT__PRMAZE

    class bot {
        /** Klasa Bazowa dla:
                - class: player
                - class: moob
            Znajduja sie w niej informacje niezbedne dla
            wszystkiego co swobodnie skacze po pokoju.
        */
    public: // PUBLICZNE, CZYLI TYLKO DO ODCZYTU:
        int XPOS () {return this->xpos;}
        int YPOS () {return this->ypos;}
        //int SPEED () {return this->speed;}

    protected:
        int xpos;
        int ypos;
        int speedVY;              // X steps/jumps per turn.
        int speedHX;              // X steps/jumps per turn.
    };

#endif // BOT__PRMAZE



