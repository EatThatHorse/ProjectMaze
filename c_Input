

#ifndef INPUT__PRMAZE
#define INPUT__PRMAZE

    #include <conio.h>      // getch / kbhit
    #include "c_Player"

    class Input {

    public:
        int Run(player& HERO){
            /** Zakaz Uzywania Cout, Nie zadziala
                Wynika to z sposobu dzialania getch() i system("cls")   */

            unsigned char znak;
            znak = getch();   // Oczekiwanie na Input.
            if (znak == 224) return 224;    // PUNKT KONTROLNY - Wynika z dzialania getch().

            // Obsluga Input Eventow: -------------------------------------
            if (znak == 27) {       // ESCAPE
                return znak;
            }
            if (znak == 32) {       // SPACJA
                return znak;
            }
            if (znak == 13) {       // ENTER
                return znak;
            }
            if (znak == 75){        // ← (left)
                HERO.Move(LEFT);
                return znak;
            }
            if (znak == 77){        // → (right)
                HERO.Move(RIGHT);
                return znak;
            }
            if (znak == 72){        // ↑ (up)
                HERO.Move(UP);
                return znak;
            }
            if (znak == 80) {       // ↓ (down)
                HERO.Move(DOWN);
                return znak;
            }
            return 224;     // 224 - z decyzji [Kacu]: kod bledu nakazujacy robic nic.
        }

    };

#endif // INPUT__PRMAZE

